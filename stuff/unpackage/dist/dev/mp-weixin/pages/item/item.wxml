<view class="container"><view class="form-container"><view class="form-item"><text class="label">物品名称</text><input type="text" placeholder="请输入物品名称" value="{{a}}" bindinput="{{b}}"/></view><view class="form-item"><text class="label">所属分类</text><picker bindchange="{{d}}" value="{{e}}" range="{{f}}" range-key="name"><view class="picker">{{c}}</view></picker></view><view class="form-item"><text class="label">数量</text><input type="number" placeholder="请输入数量" value="{{g}}" bindinput="{{h}}"/></view><view class="form-item"><text class="label">位置</text><view class="location-input"><input type="text" placeholder="请输入或选择存放位置" value="{{i}}" bindinput="{{j}}"/><text class="map-btn" bindtap="{{k}}">选择位置</text></view></view><view class="form-item"><text class="label">描述</text><block wx:if="{{r0}}"><textarea placeholder="请输入物品描述" value="{{l}}" bindinput="{{m}}"/></block></view><view class="form-item"><text class="label">提醒设置</text><view class="reminder-item"><text class="reminder-label">库存提醒</text><input type="number" placeholder="设置库存提醒阈值，为空则不提醒" class="reminder-input" value="{{n}}" bindinput="{{o}}"/></view><view class="reminder-item"><text class="reminder-label">使用提醒</text><input type="number" placeholder="设置使用提醒间隔（天数），为空则不提醒" class="reminder-input" value="{{p}}" bindinput="{{q}}"/></view></view><view class="form-item"><text class="label">图片</text><view wx:if="{{r}}" class="image-upload" bindtap="{{s}}"><text class="upload-icon">+</text><text>上传图片</text></view><view wx:else class="image-preview"><image src="{{t}}" mode="aspectFill"></image><text class="delete-icon" catchtap="{{v}}">×</text></view></view><button class="submit-btn" bindtap="{{x}}">{{w}}</button></view></view>